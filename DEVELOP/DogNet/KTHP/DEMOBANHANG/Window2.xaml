<Window x:Class="DEMOBANHANG.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEMOBANHANG"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <DataGrid ColumnHeaderStyle="{StaticResource styleHeading}" x:Name="dtgSPW2"  AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn  Header="Mã SP" Binding="{Binding MaSp}"/>
                <DataGridTextColumn Header="Tên SP" Binding="{Binding TenSp}"/>
                <DataGridTextColumn Header="Tên loại SP" Binding="{Binding TenLoai}"/>
                <DataGridTextColumn Header="Số lượng mua" Binding="{Binding SoLuongMua}"/>
                <DataGridTextColumn  Header="Thành tiền" Binding="{Binding ThanhTien}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
